<LinearLayout xmlns:zhang="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.huwang.mobilesafe20.MainActivity">

    <!-- 标题 -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#A4F66E"
        android:gravity="center"
        android:text="设置中心"
        android:textSize="25sp" />
    <!-- 自动更新 -->

    <com.example.huwang.mobilesafe20.ui.SettingCenterView
        android:id="@+id/item_update"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        zhang:m_title="自动更新设置"
        zhang:desc_on="自动更新设置已开启"
        zhang:desc_off="自动更新设置已关闭"
        zhang:check="true"/>
   <!-- <include
        android:id="@+id/select_style"
        layout="@layout/view_item_arrow" />-->

</LinearLayout>