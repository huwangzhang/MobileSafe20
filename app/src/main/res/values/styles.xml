<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Setting_Title">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#39941C</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="Setting_Text">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="Setting_Dot_Select">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">@drawable/set_dot_selector</item>
    </style>

    <style name="Setting_Button" parent="android:Widget.TextView">
        <item name="android:background">@drawable/button_green_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:clickable">true</item>
    </style>

</resources>
